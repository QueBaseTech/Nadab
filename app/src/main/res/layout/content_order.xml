<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Order"
    tools:showIn="@layout/activity_order">

    <TextView
        android:id="@+id/customer_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/order_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/customer_name_tv"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_items_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/order_status_tv"/>

    <TextView
        android:id="@+id/total_price_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/order_items_recycler_view" />

    <Button
        android:id="@+id/accept_all_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green_light"
        android:layout_margin="16dp"
        android:text="Accept All"
        app:layout_constraintTop_toBottomOf="@id/order_items_recycler_view" />

    <Button
        android:id="@+id/reject_all_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_margin="16dp"
        android:text="Reject All"
        app:layout_constraintTop_toBottomOf="@id/accept_all_btn" />

    <Button
        android:id="@+id/confirm_payment"
        android:text="Confirm Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/reject_all_btn"/>

    <Button
        android:id="@+id/complete_order"
        android:text="Complete Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_payment"/>

</android.support.constraint.ConstraintLayout>